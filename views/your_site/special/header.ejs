<div class="nav">
    <a href="/" class="link">home</a>
    <a href="/<%= dl %>" class="link"><%= dl %></a>
</div>
<style>
    body{
        padding: 0;
        margin: 0;
        font-family: sans-serif;
        overflow-x: hidden;
    }
    .nav{
        width: calc(100vw - 10px);
        height: 50px;
        background-color: #ccc;
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 5px;
    }

    .nav a{
        margin: 0 5px;
        padding: 5px 10px;
        color: black;
        text-decoration: none;
        border-radius: 5px;
        transition: 0.2s;
    }

    .nav a:hover{
        background-color: #c1c1c1;
    }

    .cts{
        background-color: #cccccc;
        border-radius: 5px;
        display: block;
        overflow: hidden;
    }

    .cts span{
        transition: 0.2s;
        padding: 10px 15px;
        display: block;
    }

    .cts span:hover{
        background-color: #c1c1c1;
    }

    .cts span a{
        text-transform: capitalize;
        color: #000;
        text-decoration: none;
    }
    .container{
        padding: 10px;
    }

    .hero{
        padding: 30px 50px;
        background-color: #c1c1c1;
    }

    .btn{
        background-color: #ccc;
        margin: 0 5px;
        padding: 10px 15px;
        color: black;
        text-decoration: none;
        border-radius: 5px;
        transition: 0.2s;
    }

    .btn:hover{
        background-color: #c1c1c1;
    }

    .hero .btn{
        display: block;
        width: 100%;
        text-align: center;
    }

    .hero .btn:hover{
        background-color: #ddd;
    }

    .cts span:hover{
        background-color: #ddd;
    }

    code{
        background-color: #444;
        padding: 10px 15px;
        border-radius: 5px;
        color: white;
        display: block;
    }

    .hero code{
        width: 100%;
        text-align: center;
    }

    .dl{
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .container code{
        margin: 5px 0;
    }

    a{
        color: blue;
    }
</style>